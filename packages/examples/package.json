{
  "name": "@penrose/examples",
  "version": "3.2.0",
  "private": true,
  "type": "module",
  "dependencies": {
    "@penrose/core": "^3.2.0",
    "@penrose/solids": "^3.2.0",
    "solid-js": "^1"
  },
  "devDependencies": {
    "prettier": "^3",
    "vite": "^4",
    "vitest": "^0.34.5"
  },
  "scripts": {
    "build": "rimraf dist && tsc",
    "build-decls": ":",
    "codegen": "git clean -dfqX src && node codegen.js",
    "test": "cross-env NODE_OPTIONS='--max-old-space-size=8192' vitest run --no-threads --reporter=verbose",
    "typecheck": ":"
  },
  "nx": {
    "targets": {
      "build": {
        "dependsOn": [
          "^build",
          "^build-decls",
          "codegen"
        ]
      },
      "build-decls": {
        "dependsOn": [
          "build"
        ]
      },
      "test": {
        "dependsOn": [
          "^build",
          "^build-decls",
          "codegen"
        ]
      }
    }
  }
}
